<div class="result grid_12">
<h2>Search results</h2>
<h4><%= @status %></h4>
<table>
  <thead style="text-align: left; padding-left: 0px;">
    <tr>
      <th width="300px">Name</th>
      <th width="300px">Sector</th>
      <th width="300px">Location</th>
    </tr>
  </thead>

  <tbody>
    <% @finances.each do |finance| %>
      <tr>
        <td><%= link_to finance.name, finance %></td>
        <td><%= finance.sector %></td>
        <td><%= finance.location %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br/>
</div>