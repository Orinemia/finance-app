<div class="grid_8">
<h4><%= @status %></h4>
<table style="color: #0A264D;">
  <thead style="text-align: left; padding-left: 0px;">
    <tr>
      <th width="200px">Name</th>
      <th width="200px">Sector</th>
      <th width="200px">Location</th>
    </tr>
  </thead>

  <tbody>
    <% @finances.each do |finance| %>
      <tr>
        <td><%= link_to finance.name, finance %></td>
        <td><%= finance.sector %></td>
        <td><%= finance.location %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br/>
</div>